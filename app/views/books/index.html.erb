<h1><strong>Books</strong></h1>

<% @book.each do |book| %>

<%= link_to "show", book_path(book) %>
<%= link_to "edit", edit_book_path %>
<%= link_to "destroy" book_path(@book), method: :delete %>

<h2><strong>New book</strong></h2>

<%= form_with model:@book, local:true do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_field :body %>

<%= f.submit 'Create Book' %>

<% end %>